
@{
    ViewBag.Title = "AllNews";
    var model = ViewBag.News;
}

<h2>AllNews</h2>

@foreach(var item in model)
{
<div class="box">
    <div class="image">
        <img src="@item.ImagePath" />
    </div>
    <div class="content">
        <h2>@item.Title</h2>
        <p>@item.Description</p>
        <p>@item.CreationDate</p>
    </div>
</div>
}

<style>
    .box{
        display: flex;
    }
    .image{
        margin: 15px;
    }
    img{
        width: 150px;
        height: 90px;
    }

</style>