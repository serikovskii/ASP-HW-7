
@{
    ViewBag.Title = "Auth";
    var msg = ViewBag.Message;
}

<h2>Войти</h2>

@using (Html.BeginForm("Auth", "User", FormMethod.Post))
{
    <p>Введите свое имя </p>
    <input type="text" name="login" />
    <p>Введите пароль :</p>
    <input type="password" name="password" />
    <input type="submit" value="Войти" />
}

<p>@msg</p>